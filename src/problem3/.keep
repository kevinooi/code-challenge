interface WalletBalance {
  currency: string;
  amount: number;
  // TODO: Missing `blockchain` property
}
interface FormattedWalletBalance {
  currency: string;
  amount: number;
  formatted: string;
}

interface Props extends BoxProps {}

const WalletPage: React.FC<Props> = (props: Props) => {
  const { children, ...rest } = props;
  const balances = useWalletBalances();
  const prices = usePrices();

  // TODO: Function Recreation
  // getPriority is defined inside the component, causing it to be recreated on every render
  // TODO: No type safety for blockchain `any`
  const getPriority = (blockchain: any): number => {
    switch (blockchain) {
      case "Osmosis":
        return 100;
      case "Ethereum":
        return 50;
      case "Arbitrum":
        return 30;
      case "Zilliqa":
        return 20;
      case "Neo":
        return 20;
      default:
        return -99;
    }
  };

  const sortedBalances = useMemo(() => {
    return balances
      .filter((balance: WalletBalance) => {
        const balancePriority = getPriority(balance.blockchain);
        // TODO: lhsPriority was undefined (likely meant to be balancePriority).
        if (lhsPriority > -99) {
          // TODO: logic was inverted (<= 0), typically we want > 0 for wallet balances
          if (balance.amount <= 0) {
            return true;
          }
        }
        return false;
      })
      .sort((lhs: WalletBalance, rhs: WalletBalance) => {
        // TODO: Repeated Computation
        // When sort runs, it compares pairs of items. If you have N items, the comparison function runs N * log(N) times
        // Since getPriority is called twice here, it runs 2 * N * log(N) times.
        const leftPriority = getPriority(lhs.blockchain);
        const rightPriority = getPriority(rhs.blockchain);
        // TODO: Sort expects return values of negative, positive, or zero.
        // The provided logic handles > 1 and -1 but returns undefined if priorities are equal.
        if (leftPriority > rightPriority) {
          return -1;
        } else if (rightPriority > leftPriority) {
          return 1;
        }
      });
  }, [balances, prices]);
  // TODO: Unnecessary re-renders
  // The useMemo hook included prices in its dependency array even though prices was not used inside the function. 
  // This meant the expensive filtering and sorting logic ran every time prices updated.


  // TODO: Redundant computation
  // The purpose of this formattedBalances array is to add formatted property by mapping over sortedBalances. 
  // However, it is never used hence it's wasting computation.
  const formattedBalances = sortedBalances.map((balance: WalletBalance) => {
    return {
      ...balance,
      formatted: balance.amount.toFixed()
    };
  });

  // TODO: Mapping incorrectly (balance doesn't have a `formatted` property).
  const rows = sortedBalances.map((balance: FormattedWalletBalance, index: number) => {
    const usdValue = prices[balance.currency] * balance.amount;

    // TODO: Using index as a key is an anti-pattern.
    // The index of an item does not uniquely identify it since the listed is sorted and filtered.
    // If the list order changes, React may incorrectly reuse component state or re-render unnecessarily.
    // Use unique ID (e.g. balance.currency)
    return (
      <WalletRow
        className={classes.row}
        key={index}
        amount={balance.amount}
        usdValue={usdValue}
        formattedAmount={balance.formatted}
      />
    );
  });

  return <div {...rest}>{rows}</div>;
};